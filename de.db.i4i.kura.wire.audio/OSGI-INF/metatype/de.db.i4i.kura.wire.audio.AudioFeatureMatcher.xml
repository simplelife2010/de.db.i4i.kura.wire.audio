<?xml version="1.0" encoding="UTF-8"?>
<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="de.db.i4i.kura.wire.audio.AudioFeatureMatcher" 
         name="AudioFeatureMatcher" 
         decodebookion="A wire component that matches audio features against a codebook">
        
        <AD id="codebook.path"
            name="codebook.path"
            type="String"
            cardinality="0"
            required="true"
            default="/opt/i4i/codebooks"
            decodebookion="The path where the feature extraction codebook is located">
        </AD>
        
        <AD id="codebook.filename"
            name="codebook.filename"
            type="String"
            cardinality="0"
            required="true"
            default="codebook.json"
            decodebookion="The name of the feature extraction codebook">
        </AD>
        
    </OCD>
    
    <Designate pid="de.db.i4i.kura.wire.audio.AudioFeatureMatcher" factoryPid="de.db.i4i.kura.wire.audio.AudioFeatureMatcher">
        <Object ocdref="de.db.i4i.kura.wire.audio.AudioFeatureMatcher"/>
    </Designate>
</MetaData>
